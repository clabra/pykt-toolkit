{
    "name": "PyKT Toolkit GPU Enabled",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "../..",
        "args": {
            "USERNAME": "vscode",
            "USER_UID": "1000",
            "USER_GID": "1000"
        }
    },
    "runArgs": [
        "--shm-size=4g",
        "--gpus=all",
        "--runtime=nvidia",
        "--privileged"
    ],
    // This command installs the pykt-toolkit in editable mode after the container is created.
    // The Dockerfile already configures the environment, so we can call pip directly.
    // A fallback to 'python -m build' is included for robustness.
    "postCreateCommand": "pip install --no-warn-script-location --no-build-isolation -e . || (echo 'Fallback: building wheel...' && python -m build --wheel --no-isolation && pip install dist/*.whl)",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "clemenspeters.format-json",
                "davidanson.vscode-markdownlint",
                "george-alisson.html-preview-vscode",
                "github.copilot",
                "github.copilot-chat",
                "mhutchie.git-graph",
                "likec4.likec4-vscode",
                "ms-dotnettools.vscode-dotnet-runtime",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-ai",
                "ms-toolsai.vscode-ai-remote",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-vscode.powershell",
                "rangav.vscode-thunder-client",
                "rapidapi.vscode-rapidapi-client",
                "rapidapi.vscode-services",
                "waderyan.gitblame",
                "hediet.vscode-drawio",
                "pomdtr.excalidraw-editor",
                "charliermarsh.ruff",
                "EditorConfig.EditorConfig",
                "tamasfe.even-better-toml",
                "redhat.vscode-yaml",
                "googlecloudtools.cloudcode",
                "google.geminicodeassist",
                "ms-python.vscode-python-envs",
                "Anthropic.claude-code",
                "James-Yu.latex-workshop"
            ]
        },
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash"
        }
    },
    "forwardPorts": [3000],
    "remoteUser": "vscode"
}
